{
  "name": "@sojanvarghese/commit-x",
  "version": "2.1.0",
  "description": "AI-powered Git commit assistant that intelligently analyzes your code changes and generates clear, concise, and context-aware commit messages",
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini",
    "cli",
    "typescript",
    "automation"
  ],
  "homepage": "https://github.com/sojanvarghese/commit-x#readme",
  "bugs": {
    "url": "https://github.com/sojanvarghese/commit-x/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sojanvarghese/commit-x.git"
  },
  "license": "MIT",
  "author": "Sojan Varghese (https://github.com/sojanvarghese)",
  "type": "module",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cx": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "ts-node src/cli.ts",
    "cx": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf node_modules yarn.lock",
    "commit": "yarn cx commit",
    "commit:dry": "yarn cx commit --dry-run",
    "commit:all": "yarn cx commit --all",
    "status": "yarn cx status",
    "diff": "yarn cx diff",
    "config:get": "yarn cx config get",
    "config:model": "yarn cx config set model",
    "config:reset": "yarn cx config reset",
    "setup": "yarn cx setup",
    "help": "yarn cx help-examples",
    "uninstall": "npm uninstall -g commit-x"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "commander": "^14.0.2",
    "simple-git": "^3.30.0",
    "ts-pattern": "^5.9.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "eslint": "9.39.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "gradient-string": "^3.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "tsup": "^8.5.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.12.0",
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
