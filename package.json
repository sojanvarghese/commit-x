{
  "name": "commit-x",
  "version": "1.0.0",
  "description": "AI-powered Git commit assistant that intelligently analyzes your code changes and generates clear, concise, and context-aware commit messages",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "commit-x": "dist/cli.js",
    "cx": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf node_modules yarn.lock"
  },
  "packageManager": "yarn@4.0.0",
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini",
    "cli",
    "typescript",
    "automation"
  ],
  "author": {
    "name": "Sojan Varghese",
    "email": "sojan@example.com",
    "url": "https://github.com/sojanvarghese"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sojanvarghese/commit-x.git"
  },
  "bugs": {
    "url": "https://github.com/sojanvarghese/commit-x/issues"
  },
  "homepage": "https://github.com/sojanvarghese/commit-x#readme",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=4.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
