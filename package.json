{
  "name": "commit-x",
  "version": "1.0.0",
  "description": "AI-powered Git commit assistant that intelligently analyzes your code changes and generates clear, concise, and context-aware commit messages",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "commit-x": "dist/cli.js",
    "cx": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "cx": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf node_modules yarn.lock",
    "commit": "yarn cx commit",
    "commit:dry": "yarn cx commit --dry-run",
    "commit:all": "yarn cx commit --all",
    "status": "yarn cx status",
    "diff": "yarn cx diff",
    "cx:config": "yarn cx config get",
    "cx:config:get": "yarn cx config get",
    "cx:config:set": "yarn cx config set",
    "cx:config:reset": "yarn cx config reset",
    "cx:setup": "yarn cx setup",
    "cx:help": "yarn cx help-examples"
  },
  "packageManager": "yarn@4.9.2",
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini",
    "cli",
    "typescript",
    "automation"
  ],
  "author": {
    "name": "Sojan Varghese",
    "email": "sojan@example.com",
    "url": "https://github.com/sojanvarghese"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sojanvarghese/commit-x.git"
  },
  "bugs": {
    "url": "https://github.com/sojanvarghese/commit-x/issues"
  },
  "homepage": "https://github.com/sojanvarghese/commit-x#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "inquirer": "^9.2.15",
    "ora": "^5.4.1",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "22.17.0",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "eslint": "9.31.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
